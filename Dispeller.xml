<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="Dispeller.lua"/>
    <Script file="Dispeller_utils.lua"/>
    <Frame name="Dispeller" parent="UIParent" toplevel="true" enableMouse="true" movable="true" frameStrata="HIGH">
        <Size>
            <AbsDimension x="220" y="80" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <ResizeBounds>
            <minResize><AbsDimension x="220" y="80"/></minResize>
            <maxResize><AbsDimension x="220" y="500"/></maxResize>
        </ResizeBounds>
        <Frames>
            <Frame name="$parentTitle">
                <Size x="220" y="10"/>
                <Anchors>
                    <Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="0"/></Offset></Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture file="Interface\DialogFrame\UI-DialogBox-Gold-Header">
                            <Size><AbsDimension x="250" y="64"/></Size>
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset><AbsDimension x="0" y="12"/></Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                        <FontString parentKey="Text" font="Fonts\FRIZQT__.TTF">
                            <Anchors>
                                <Anchor point="CENTER">
                                    <Offset><AbsDimension x="0" y="-5"/></Offset>
                                </Anchor>
                            </Anchors>
                            <FontHeight><AbsValue val="12"/></FontHeight>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame name="$parentBuffs">
                <Size x="150" y="80"/>
                <Anchors>
                    <Anchor point="TOP"><Offset><AbsDimension x="0" y="-22"/></Offset></Anchor>
                    <Anchor point="CENTER"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Text" font="Fonts\FRIZQT__.TTF" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="TOPLEFT"/>
                                <Anchor point="BOTTOMRIGHT"/>
                            </Anchors>
                            <FontHeight><AbsValue val="12"/></FontHeight>
                        </FontString>
                    </Layer>
                </Layers>
                <!--<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">-->
                    <!--<Color r="0" g="1" b="1" a="1.0"/>-->
                    <!--<BorderColor r="0" g="0" b="0" />-->
                <!--</Backdrop>-->
            </Frame>
        </Frames>
        <!--<Backdrop>-->
            <!--<Color r="0" g="1" b="1" a="1.0" />-->
        <!--</Backdrop>-->
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Scripts>
            <OnLoad>Dispeller(self)</OnLoad>
            <OnEvent>Dispeller_handleEvent(self, event, ...)</OnEvent>
            <OnMouseDown>Dispeller_mouseDown(self, button)</OnMouseDown>
            <OnMouseUp>Dispeller_mouseUp(self, button)</OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
