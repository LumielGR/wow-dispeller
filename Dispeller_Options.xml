<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Script file="Dispeller_Options.lua"/>

    <Frame name="Dispeller_Options" parent="UIParent" clampedToScreen="true" toplevel="true" enableMouse="true" movable="true" frameStrata="DIALOG" hidden="true">
        <Size><AbsDimension x="500" y="400"/></Size>
        <Anchors>
            <Anchor point="CENTER"></Anchor>
        </Anchors>
        <TitleRegion name="$parentTitle">
            <Anchors>
                <Anchor point="TOP"></Anchor>
            </Anchors>
        </TitleRegion>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background"
                  edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <Color r="0" g="0" b="0"/>
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Scripts>
            <OnLoad>Dispeller_Options_Load(self)</OnLoad>
        </Scripts>
    </Frame>

</Ui>